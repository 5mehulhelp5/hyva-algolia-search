<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="algolia.product.view">
            <action method="setTemplate">
                <argument name="setTemplate" xsi:type="string">
                    Blackbird_HyvaAlgoliaSearch::recommend/products.phtml
                </argument>
            </action>
        </referenceBlock>
        <referenceBlock name="product.info.form">
            <block name="algolia.product.addtocart.queryId" class="Magento\Framework\View\Element\Template"
                   template="Blackbird_HyvaAlgoliaSearch::product/view/addtocart.phtml" after="-"/>
        </referenceBlock>
    </body>
</page>
